<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
 
<TableLayout
    android:id="@+id/TableLayout01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:padding="10dp" >
    
<TableRow android:id="@+id/TableRow16"   >

<TextView
    android:id="@+id/TextView06"
    android:layout_span="2"
    android:height="30dp"
    android:gravity="left|center_horizontal"
    android:textStyle="bold"
    android:textSize="14sp"
    android:text="DETALLE DEL COBRO PARA EL FOLIO  :590876" />

</TableRow>    

<TableRow android:id="@+id/TableRow01" >

<TextView
    android:id="@+id/TextView01"
    android:gravity="right"
    android:text="Folio:"
    android:width="120dp" />

<EditText
    android:id="@+id/EditText01"
    android:width="210dp" />

</TableRow>
<TableRow android:id="@+id/TableRow02">

<TextView
    android:id="@+id/TextView02"
    android:gravity="right"
    android:text="Importe Total :" />

<EditText android:id="@+id/EditText02" />
</TableRow>
<TableRow android:id="@+id/TableRow03">

<TextView
    android:id="@+id/TextView03"
    android:gravity="right"
    android:text="Tipo Cobranza:" />

   <Spinner
        android:id="@+id/cmbTiposCob"
        
        android:entries="@array/tipos_cobro"
        />

</TableRow>
<TableRow android:id="@+id/TableRow04">

<TextView
    android:id="@+id/TextView04"
    android:gravity="right"
    android:text="Banco:" />

   <Spinner
        android:id="@+id/cmbBancos"        
        android:entries="@array/bancos"
        />
</TableRow>
<TableRow android:id="@+id/TableRow05">

<TextView
    android:id="@+id/TextView05"
    android:gravity="right"
    android:text="Num.Cheque :" />

<EditText android:id="@+id/EditText05" />
</TableRow>

<TableRow android:id="@+id/TableRow09">

<TextView
    android:id="@+id/TextView10"
    android:gravity="right"
    android:text="Tipo:" />

   <Spinner
        android:id="@+id/cmbTipos"        
        android:entries="@array/tipos"
        />
</TableRow>

<TableRow android:id="@+id/TableRow06">

<TextView
    android:id="@+id/TextView06"
    android:gravity="center_horizontal"
    android:text="Por Aplicar :" />

<TextView
    android:id="@+id/TextView061"
    android:gravity="center_horizontal"
    android:text="Aplicado :" />

</TableRow>

<TableRow android:id="@+id/TableRow07">
<EditText android:id="@+id/EditText07" />
<EditText android:id="@+id/EditText07_1" />
</TableRow>

<TableRow android:id="@+id/TableRow08">
<Button android:id="@+id/Button01"
android:layout_width="60dp"
android:layout_height="wrap_content" android:text="Submit" />

<Button
    android:id="@+id/Button02"
    android:layout_width="60dp"
    android:layout_height="wrap_content"
    android:text="Reset" />

</TableRow>
</TableLayout>   
 
</LinearLayout>